<h1>Expense Reports</h1>

<%= form_with(url: expense_reports_path, method: :get) do |form| %>
    <% if current_user.admin %>
        <div>
        <%= form.label :name, 'Filter by Employee Name' %>
        <%= form.text_field :name %>
        </div>
        <div>
        <%= form.submit 'Filter' %>
        </div>
    <% end %>
<% end %>

<% @expense_reports.each do |expense_report| %>
  <p><%= link_to expense_report.description, expense_report_path(expense_report) %></p>
<% end %>

<p><%= link_to "New expense report", new_expense_report_path %></p>